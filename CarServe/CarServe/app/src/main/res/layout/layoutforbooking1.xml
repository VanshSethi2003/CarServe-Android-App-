<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookingid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:gravity="left"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/bookingcost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/packname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookingdatetv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingtimetv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:layout_weight="5"
                android:gravity="left"
                android:textSize="17dp"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#eeeeee"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/busernametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left"
                android:textSize="18sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/bemailtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/bphonenotv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>
        <TextView
            android:id="@+id/statustv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancelappointment"
                />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user location"
                android:layout_marginLeft="10dp"
                android:id="@+id/userlocation"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>