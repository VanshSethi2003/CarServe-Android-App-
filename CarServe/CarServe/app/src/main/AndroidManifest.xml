<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.carserve">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarServe">
        <activity
            android:name=".ContactUs"
            android:exported="false" />
        <activity
            android:name=".UserSignupScreen"
            android:exported="false" />
        <activity
            android:name=".ManageServiceRecords"
            android:exported="false" />
        <activity
            android:name=".ViewDetailAndBook"
            android:exported="false" />
        <activity
            android:name=".AddNewPackage"
            android:exported="false" />
        <activity
            android:name=".ProviderDash"
            android:exported="false"
            android:label="@string/title_activity_provider_dash"
            android:theme="@style/Theme.CarServe.NoActionBar" />
        <activity
            android:name=".ProviderLogin"
            android:exported="false" />
        <activity
            android:name=".ViewBookings"
            android:exported="false" />
        <activity
            android:name=".UserDashboard"
            android:exported="false"
            android:label="@string/title_activity_user_dashboard" />
        <activity
            android:name=".UserSignUp"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>